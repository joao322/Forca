Gerenciador:

    Screen:
        name: "menu"

        Label:
            text:"Forca"
            pos: 0, root.height/2 - self.font_size

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.45
            padding: 10
            spacing: "10dp"

            Button:
                text: "normal"
                on_press: root.celetor("n")
                on_release: app.root.current = "game"

            Button:
                text: "dificil"
                on_press: root.celetor("d")
                on_release: app.root.current = "game"


    Tela_Finalizacao:
        name: "tela_final" 
    Game:
        name: "game"  


<Tela_Finalizacao>:

    Label:
        text:'pontos ganhado +' + str(root.pontos)
        pos:0, root.height/2 - self.font_size
    
    BoxLayout:
        size_hint_y: .50
        orientation: "vertical"
        padding: 10,
        spacing: 10

        Label:
            text: "VocÃª quer"
            size_hint_x: 0.15
        Button:
            text:"Continuar"
            on_press: app.root.current = 'game'

        Button:
            text: "Voltar para o menu"
            on_press: app.root.current = 'menu'
<Game>:
    Label:
        text: "caregando..."
        id:tema
        pos:self.font_size/2 * (len(self.text)/2) - self.width//2,root.height/2  -  self.font_size 
        
        
    # ciando um techado que so pode ser apertado uma vez
    Button:
        
        background_color: 0.5, 0.5, 0.5, 0
        size_hint: .08,.08
        pos: root.width - self.size[0], root.height - self.size[1]
        on_press: root.dica()
    Image:
        size_hint: .08, .08
        source:'imagens/lapada.png'
        pos: root.width - self.size[0], root.height - self.size[1]
    BoxLayout:
